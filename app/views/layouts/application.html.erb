<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <br>
    <% if display_slide %>
      <%= render "layouts/slide" %>
    <% end %>
    <%= yield %>
    <%= render "layouts/footer" %>
    <%= render "layouts/sign_login" %>
  </body>
</html>
