<div id="modal-user-settings"
  class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h2 class="modal-title">
          <i class="fa fa-pencil"></i><%= t "setting" %>
        </h2>
      </div>
      <div class="modal-body">
        <%= form_for current_user, url: admin_user_path(current_user),
          html: {method: "patch"} do |f| %>
          <fieldset>
            <legend><%= t "vital_info" %></legend>
            <div class="form-group">
              <label class="col-md-4 control-label"><%= t "name" %></label>
              <div class="col-md-8">
                <p class="form-control-static">
                  <%= f.text_field :name, class: "form-control" %>
                </p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-4 control-label" for="user-settings-email">
                <%= t "email" %>
              </label>
              <div class="col-md-8">
                <p class="form-control-static">
                  <%= f.text_field :email, class: "form-control" %>
                </p>
              </div>
            </div>
          </fieldset>
          <fieldset>
            <legend><%= t "password_update" %></legend>
              <div class="form-group">
                <label class="col-md-4 control-label"
                  for="user-settings-password">
                  <%= t "new_password" %>
                </label>
                <div class="col-md-8">
                  <%= f.password_field :password, class: "form-control",
                    placeholder: t("password") %>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-4 control-label"
                  for="user-settings-repassword">
                  <%= t "confirm_new_password" %>
                </label>
                <div class="col-md-8">
                  <%= f.password_field :password_confirmation,
                    placeholder: t("confirmation"), class: "form-control" %>
                </div>
              </div>
              <div class="form-group" id= setting_custom>
                <%= f.submit t("save_change"), class: "btn btn-primary" %>
              </div>
          </fieldset>
          <div class="form-group form-actions">
            <div class="col-xs-12 text-right">
              <button type="button" class="btn btn-sm btn-default"
                data-dismiss="modal"><%= t "close" %></button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
