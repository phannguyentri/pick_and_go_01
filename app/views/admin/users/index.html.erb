<% provide :title, t("view.admin.users.thanhvien") %>
<div class="content-header">
  <div class="header-section">
    <h1>
      <i class="gi gi-table"></i><%= t "view.admin.users.danhsachthanhvien" %>
      <br>
    </h1>
  </div>
</div>
<ul class="breadcrumb breadcrumb-top">
  <li><%= link_to t("trangchu"), admin_root_path %></li>
  <li>
    <%= link_to t("view.admin.layouts.quanlythanhvien"), admin_users_path %>
  </li>
</ul>
<div>
  <button class="btn btn-primary btn-lg" data-toggle="modal"
    data-target="#add-userr">
    <i class="fa fa-user"> <%= t "view.admin.users.themthanhvien" %></i>
  </button>
</div>
<div class="block">
  <div class="block-title">
    <h2><strong><%= t "view.admin.users.danhsachthanhvien" %></strong> </h2>
  </div>
  <div class="table-responsive">
    <table id="general-table" class="table table-striped table-vcenter">
      <thead>
        <tr>
          <th><%= t "view.admin.users.hoten" %></th>
          <th><%= t "view.admin.users.hinhanh" %></th>
          <th><%= t "view.admin.users.email" %></th>
          <th><%= t "view.admin.users.sdt" %></th>
          <th><%= t "view.admin.users.diachi" %></th>
          <th><%= t "view.admin.users.vitri" %></th>
          <th><%= t "view.admin.users.ngaytao" %></th>
          <th class="text-center"><%= t "view.admin.users.hanhdong" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "list_users", collection: @users, as: :user %>
      </tbody>
    </table>
  </div>
</div>
<div id="page-users">
  <h4><%= paginate @users %></h4>
</div>
<%= render "add_user" %>
