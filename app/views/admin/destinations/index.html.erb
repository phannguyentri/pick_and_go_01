<% provide :title, t("khamphavietnam") %>
<div class="content-header">
  <div class="header-section">
    <h1>
      <i class="gi gi-table"></i><%= t "view.admin.destinations.danhsach" %>
    </h1>
  </div>
</div>
<ul class="breadcrumb breadcrumb-top">
  <li><%= link_to t("trangchu"), admin_root_path %></li>
  <li><%= link_to t("khamphavietnam"), admin_destinations_path %></li>
</ul>
<div>
  <%= link_to new_admin_destination_path, class: "btn btn-primary btn-lg" do %>
    <i class="fa fa-th-list"> <%= t "view.admin.destinations.thembaiviet" %></i>
  <% end %>
</div>
<div class="block">
  <div class="block-title">
    <h2><strong><%= t "view.admin.destinations.danhsach" %></strong></h2>
  </div>
  <div class="table-responsive">
    <table id="general-table" class="table table-striped table-vcenter">
      <thead>
        <tr>
          <th class="text-center"><%= t "view.admin.destinations.id" %></th>
          <th class="text-center"><%= t "view.admin.destinations.ten" %></th>
          <th class="text-center">
            <%= t "view.admin.destinations.hinhanh" %>
          </th>
          <th class="text-center">
            <%= t "view.admin.destinations.ngaydang" %>
          </th>
          <th class="text-center">
            <%= t "view.admin.destinations.hanhdong" %>
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "list_destinations",
          collection: @destinations, as: :destination %>
      </tbody>
    </table>
  </div>
</div>
<div id="page-categories" >
  <%= paginate @destinations %>
</div>
